{% extends 'viewtubeBase.html.twig' %}

{% block titulo %}
	{% trans %}login.titulo{% endtrans %}
{% endblock %}

{% block main %}
	<div class="container">
		<div class="row justify-content-center">

			<div class="col-11 col-xl-7 m-4">
				<form method="post">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					{% if app.user %}
						<div class="mb-3">
							{% trans %}login.aviso{% endtrans %}
							{{ app.user.username }},
							<a href="{{ path('app_logout') }}">{% trans %}login.cerrar{% endtrans %}</a>
						</div>
					{% endif %}

					<h1 class="h3 mb-3 font-weight-normal">{% trans %}login.mensaje{% endtrans %}</h1>

					<div class="mb-3">
						<label for="inputEmail" class="form-label">{% trans %}usuario.correo{% endtrans %}</label>
						<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
					</div>
					<div class="mb-3">
						<label for="inputPassword" class="form-label">{% trans %}login.contrase√±a{% endtrans %}</label>
						<input type="password" name="password" id="inputPassword" class="form-control" required>
					</div>

					<input
					type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					{#
																																			        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
																																			        See https://symfony.com/doc/current/security/remember_me.html
																																			
																																			        <div class="checkbox mb-3">
																																			            <label>
																																			                <input type="checkbox" name="_remember_me"> Remember me
																																			            </label>
																																			        </div>
																																			    #}

					<button id="botonLogin" class="btn" type="submit">
						{% trans %}login.boton{% endtrans %}
					</button>
				</form>
			</div>

			<div class="col-11 col-xl-7">
				<hr class="dropdown-divider">
				<div class="mb-3 text-center">
					<a id="registro" href="{{ path('registro') }}">{% trans %}formulario.registro{% endtrans %}</a>
				</div>
			</div>

		</div>
	</div>
{% endblock %}
