{% extends '/viewtube/viewtubeBase.html.twig' %}

{% block titulo %}
	{% trans %}login.titulo{% endtrans %}
{% endblock %}

{% block main %}
	<form method="post">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				{% trans %}login.aviso{% endtrans %}
				{{ app.user.username }},
				<a href="{{ path('app_logout') }}">{% trans %}login.cerrar{% endtrans %}</a>
			</div>
		{% endif %}

		<h1 class="h3 mb-3 font-weight-normal">{% trans %}login.mensaje{% endtrans %}</h1>
		<p>
			<label for="inputEmail">{% trans %}usuario.correo{% endtrans %}</label>
			<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
		</p>
		<p>
			<label for="inputPassword">{% trans %}login.contrase√±a{% endtrans %}</label>
			<input type="password" name="password" id="inputPassword" class="form-control" required>
		</p>

		<input
		type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

		{#
						        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
						        See https://symfony.com/doc/current/security/remember_me.html
						
						        <div class="checkbox mb-3">
						            <label>
						                <input type="checkbox" name="_remember_me"> Remember me
						            </label>
						        </div>
						    #}

		<button class="btn btn-lg btn-primary" type="submit">
			{% trans %}login.boton{% endtrans %}
		</button>
	</form>
{% endblock %}
