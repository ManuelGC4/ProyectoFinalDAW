{% extends 'blog/blogBase.html.twig' %}

{% block titulo %}
	{% trans %}editarNoticia.titulo{% endtrans %}
	-
	{{ parent() }}
{% endblock %}

{% block main %}
	<p class="small">
		<a href="{{ path('index') }}">‚Üê
			{% trans %}noticia.volver{% endtrans %}</a>
	</p>
	{{ form_start(form) }}
	<p>{{ form_label(form.titular) }}
		{{ form_widget(form.titular) }}
		<br/>{{ form_help(form.titular) }}</p>
	<div class="form-error">
		{{ form_errors(form.titular) }}
	</div>

	<p>{{ form_label(form.entradilla) }}<br/>
		{{ form_widget(form.entradilla) }}
		<br/>
		{{ form_help(form.entradilla) }}</p>
	<div class="form-error">
		{{ form_errors(form.entradilla) }}
	</div>

	<p>{{ form_label(form.cuerpo) }}<br/>
		{{ form_widget(form.cuerpo) }}
		<br/>
		{{ form_help(form.cuerpo) }}</p>
	<div class="form-error">
		{{ form_errors(form.cuerpo) }}
	</div>

	<p>{{ form_label(form.fecha) }}
		{{ form_widget(form.fecha) }}
		<br/>
		{{ form_help(form.fecha) }}</p>
	<div class="form-error">
		{{ form_errors(form.fecha) }}
	</div>

	{{form_row(form.save) }}
	{{ form_end(form) }}
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
	<script>
		tinymce.init({selector: 'textarea'});
	</script>
{% endblock %}
