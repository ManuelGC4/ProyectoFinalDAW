{% extends 'blog/blogBase.html.twig' %}

{% block titulo %}
	{{ parent() }}
{% endblock %}

{% block main %}
	<h2>{% trans %}index.entradas{% endtrans %}</h2>
	<ul class="listaNoticias">
		{% for noticia in noticias %}
			<li class='bloqueNoticia'>
				<img src="{{ asset('images/thumbnail-' ~ noticia.id ~ '.jpg') }}"/>
				<h3>
					<a href='{{ path('verNoticia', {'id': noticia.id}) }}'>{{noticia.titular}}</a>
				</h3>
				<p>{{noticia.entradilla|raw}}</p>
				<p>
					<a href='{{ path('verNoticia', {'id': noticia.id}) }}'>{% trans %}index.leer{% endtrans %}</a>
				</p>
				<p>{% trans %}index.publicada{% endtrans %}:
					{{noticia.fecha|date("Y-m-d H:i:s")}}. ({{noticia.comentarios|length}})
					{% trans %}index.comentarios{% endtrans %}.</p>
			</li>
		{% else %}
			<li class='bloqueNoticia'>{% trans %}index.noticias{% endtrans %}</li>
		{% endfor %}
	</ul>

	{% if is_granted('ROLE_ADMIN') %}
		<p>
			<a href="{{ path('nuevaNoticia') }}">←
				{% trans %}index.añadir{% endtrans %}</a>
		</p>
	{% endif %}
{% endblock %}
