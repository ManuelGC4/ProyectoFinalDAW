{% extends 'viewtubeBase.html.twig' %}

{% block titulo %}
	{% trans %}editarVideo.titulo{% endtrans %}
	-
	{{ parent() }}
{% endblock %}

{% block main %}
	<div class="row row-cols-1 justify-content-center">
		<div class="col-11 col-xl-7 mt-4">
			<h3>{% trans %}formulario.editar{% endtrans %}</h3>
		</div>

		<div class="col-10 col-xl-6 m-4">

			{{ form_start(form) }}

			<div class="mb-3">
				{{ form_label(form.titulo, 'formulario.titulo', {'label_attr': {'class': 'form-label'}}) }}
				{{ form_widget(form.titulo) }}
				{{ form_help(form.titulo) }}
				<div class="form-error">
					{{ form_errors(form.titulo) }}
				</div>
			</div>

			<div class="mb-3">
				{{ form_label(form.descripcion, 'video.descripcion', {'label_attr': {'class': 'form-label'}}) }}
				{{ form_widget(form.descripcion) }}
				{{ form_help(form.descripcion) }}
				<div class="form-error">
					{{ form_errors(form.descripcion) }}
				</div>
			</div>

			<div class="col-3 mb-3">
				{{ form_label(form.categoria, 'video.categoria', {'label_attr': {'class': 'form-label'}}) }}
				{{ form_widget(form.categoria, {'attr': {'class': 'form-select'}}) }}
				{{ form_help(form.categoria) }}
				<div class="form-error">
					{{ form_errors(form.categoria) }}
				</div>
			</div>

			{{form_row(form.save) }}

			{{ form_end(form) }}

		</div>
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
	<script>
		tinymce.init({selector: 'textarea'});
	</script>
{% endblock %}
